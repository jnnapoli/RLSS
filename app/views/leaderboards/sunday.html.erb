<div style="text-align: center; color:black">

  <%= link_to "<button class='btn-sm' style='color:black'>Sunday</button>".html_safe, "/leaderboards/sunday" %>

  <%= link_to "<button  class='btn-sm' style='color:black'>Wednesday</button>".html_safe, "/leaderboards/wednesday" %>

  <%= link_to "<button  class='btn-sm' style='color:black'>Friday</button>".html_safe, "/leaderboards/friday" %>
