  <%= link_to "<button  class='btn-sm' style='color:black'>Overall</button>".html_safe, "/leaderboards/" %>

</div>


<div class="myTable">
  <div class="digg_pagination"><%= will_paginate @leaderboards, :previous_label => ' &#8592; Prev', :page_links => false %></div>


  </br></br>

  <table style="text-align: center" class="table table-sm table-striped table-bordered table-hover">
    <thead class="thead-dark">
    <tr>

      <th>Team Name</th>
      <th style="width: 100px;" class="align-middle">Points</th>

      <th style="width: 100px;" class="align-middle">Wins</th>
      <th style="width: 100px;" class="align-middle">2nds</th>
      <th style="width: 100px;" class="align-middle">Semis</th>

    </tr>
    </thead>

    <tbody>
    <% @leaderboards.each do |leaderboard| %>
      <tr>
        <td><%= leaderboard.team %></td>
        <td><%= leaderboard.sun_points + leaderboard.wed_points + leaderboard.fri_points %></td>

        <td><%= leaderboard.sunday_wins + leaderboard.wednesday_wins + leaderboard.friday_wins %></td>
        <td><%= leaderboard.sunday_2nds + leaderboard.wednesday_2nds + leaderboard.friday_2nds %></td>
        <td><%= leaderboard.sunday_semis + leaderboard.wednesday_semis + leaderboard.friday_semis %></td>

        <% if user_signed_in? %>
          <td><%= link_to 'Show', leaderboard %></td>
          <td><%= link_to 'Edit', edit_leaderboard_path(leaderboard) %></td>
          <td><%= link_to 'Destroy', leaderboard, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>

      </tr>
    <% end %>
    </tbody>
  </table>


  <div class="digg_pagination"><%= will_paginate @leaderboards, :previous_label => ' &#8592; Prev', :page_links => false %></div>
  </br>
</div>


