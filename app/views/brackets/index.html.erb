<p id="notice"><%= notice %></p>

<h1>Brackets</h1>

<table>
  <thead>
    <tr>
      <th>Champs</th>
      <th>Runnerup</th>
      <th>Semi1</th>
      <th>Semi2</th>
      <th>Semi3</th>
      <th>Semi4</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brackets.each do |bracket| %>
      <tr>
        <td><%= bracket.champs %></td>
        <td><%= bracket.runnerup %></td>
        <td><%= bracket.semi1 %></td>
        <td><%= bracket.semi2 %></td>
        <td><%= bracket.semi3 %></td>
        <td><%= bracket.semi4 %></td>
        <td><%= link_to 'Show', bracket %></td>
        <td><%= link_to 'Edit', edit_bracket_path(bracket) %></td>
        <td><%= link_to 'Destroy', bracket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

