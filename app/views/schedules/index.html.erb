<h1>Schedule</h1>


<h2>Next Tournament is on 4/20/18 @ 8PM Eastern!</h2>


<% if user_signed_in? %>
<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Date</th>
      <th>Details</th>
      <th>VOD id</th>
      <th>Start Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.event %></td>
        <td><%= schedule.date %></td>
        <td><%= schedule.details %></td>
        <td><a href="https://twitch.tv/videos/<%= schedule.vod_id %>"> <%= schedule.vod_id %></a></td>
        <td><%= schedule.start_time %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>


<% end %>
